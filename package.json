{
  "name": "dynamics-for-dev",
  "displayName": "Dynamics-For-Dev",
  "description": "An extension that supports you while developing for Dynamics 365",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:dynamics-for-dev.uploadWebResource",
    "onCommand:dynamics-for-dev.addDynamicsConfig"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dynamics-for-dev.uploadWebResource",
        "title": "Dynamics-For-Dev: Upload WebResource"
      },
      {
        "command": "dynamics-for-dev.addDynamicsConfig",
        "title": "Add new dynamicsConfig"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "dynamics-for-dev.addDynamicsConfig",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p -w . --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.61.0",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.3",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fsxmanu/dynamics-for-dev"
  },
  "bugs": {
    "url": "https://github.com/fsxmanu/dynamics-for-dev/issues",
    "email": "clarity.hurler-0n@icloud.com"
  },
  "dependencies": {
    "@azure/identity": "^2.0.1",
    "xhr2": "^0.2.1"
  },
  "extensionDependencies": [
    "ms-vscode.azure-account"
  ]
}
